{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:prettier/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-console": "off",
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "eqeqeq": "off",
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "no-useless-escape": ["error"],
    "no-plusplus": "off",
    "no-unused-vars": "warn",
    "class-methods-use-this": "warn",
    "consistent-return": "warn",
    "prefer-destructuring": "warn",
    "no-await-in-loop": "warn",
    "no-use-before-define": "warn"
  }
}
